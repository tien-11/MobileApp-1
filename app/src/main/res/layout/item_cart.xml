<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_cart.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Nút chọn mua sản phẩm -->
    <CheckBox
        android:id="@+id/checkboxSelect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:buttonTint="@color/rose70_pink30_mix"
        android:layout_gravity="center_vertical"
        />
    <!-- Ảnh sản phẩm -->
    <ImageView
        android:id="@+id/imgCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sp1"
        android:layout_marginEnd="8dp" />

    <!-- Thông tin sản phẩm -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvCartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/rose50_pink50_mix"
            android:layout_marginTop="44dp" />

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/tvCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:textColor="@color/rose50_pink50_mix"
            android:layout_marginTop="8dp" />


        <!-- Số lượng + Mua ngay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <!-- Nhóm nút số lượng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnDecrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="−"
                    android:textSize="18sp"
                    android:textColor="@color/rose70_pink30_mix" />

                <TextView
                    android:id="@+id/tvCartQuantity"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/rose50_pink50_mix" />

                <TextView
                    android:id="@+id/btnIncrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="18sp"
                    android:textColor="@color/rose70_pink30_mix" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
