<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 1. Địa chỉ giao hàng -->
    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: 123 Đường ABC, Quận 1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <!-- 2-3. Ảnh + Tên sản phẩm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sp1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 4. Giá -->
            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 1.200.000đ"
                android:textColor="#E91E63"
                android:layout_marginTop="4dp" />

            <!-- 5. Số lượng -->
            <EditText
                android:id="@+id/edtQuantity"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="Số lượng"
                android:text="1"
                android:inputType="number"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 6. Phương thức vận chuyển -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phương thức vận chuyển"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
        <RadioGroup
            android:id="@+id/rgShipping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RadioGroup>


        <!-- 7. Phương thức thanh toán -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phương thức thanh toán"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
        <RadioGroup
            android:id="@+id/rgPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RadioGroup>


        <!-- 8. Tổng tiền -->
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng: 1.200.000đ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:textColor="#FF5722" />

    <!-- 9. Nút đặt hàng -->
    <Button
        android:id="@+id/btnOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐẶT HÀNG"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
